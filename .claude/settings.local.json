{
  "permissions": {
    "allow": [
      "*",
      "Bash(python:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(dir:*)",
      "Bash(git rm:*)",
      "WebFetch(domain:vincentiwadsworth.github.io)",
      "Bash(curl:*)",
      "WebSearch",
      "WebFetch(domain:www.oracle.com)",
      "WebFetch(domain:www.hetzner.com)",
      "WebFetch(domain:docs.hetzner.com)",
      "Bash(set:*)",
      "Bash(source:*)",
      "Bash(psql:*)",
      "Bash(docker:*)",
      "Bash(winget search:*)",
      "Bash(pip install:*)",
      "mcp__web-search-prime__webSearchPrime",
      "Bash(pip uninstall:*)",
      "Bash(rm:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.docker.com)",
      "Bash(pipx:*)",
      "Bash(postgres-mcp:*)",
      "Bash($env:USE_POSTGRES=\"true\")",
      "Bash(cmd:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "WebFetch(domain:stackoverflow.com)",
      "Bash(taskkill:*)",
      "Bash(where:*)",
      "Bash(netstat:*)",
      "Bash(findstr:*)",
      "Bash(pkill:*)",
      "Bash(docker-compose:*)",
      "Bash(git log:*)",
      "Bash(echo:*)",
      "Bash($env:DB_PASSWORD=\"citrino_password\")",
      "Bash(setx:*)",
      "WebFetch(domain:camphouse.io)",
      "WebFetch(domain:www.folderit.com)",
      "Bash(mv:*)",
      "Bash(xargs:*)",
      "Bash(while read:*)",
      "Bash(do echo:*)",
      "Bash(stat:*)",
      "Bash(head:*)",
      "Bash(done)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "python.*migration.*\\.py",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'REGLA: Ejecutar auditoría inmediatamente si reporta éxito'",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write.*\\.py",
        "hooks": [
          {
            "type": "command",
            "command": "echo '=== ADVERTENCIA ANTI-BLOAD ===' && echo '¿Ya existe un script con esta funcionalidad?' && echo '¿Evité sufijos como _improved, _v2, _backup?' && echo 'REGLA DE ORO: Corregir archivos existentes, no crear duplicados'",
            "timeout": 8
          }
        ]
      },
      {
        "matcher": "Edit.*\\.py",
        "hooks": [
          {
            "type": "command",
            "command": "echo '=== ADVERTENCIA ANTI-BLOAD ===' && echo '¿Este es el archivo correcto y la versión actual?' && echo '¿Evitaré crear una versión mejorada en vez de corregir esta?' && echo 'REGLA DE ORO: Corregir el archivo existente, no crear duplicados'",
            "timeout": 8
          }
        ]
      }
    ]
  }
}
